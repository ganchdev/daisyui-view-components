<% if form.present? %>
  <div class="form-control">
    <%= top_label if top_label? %>
    <%= form.file_field field, class: css(css_classes), **html_options.except(:class) %>
    <%= bottom_label if bottom_label? %>
  </div>
<% else %>
  <%= file_field_tag field, **html_options, class: css(css_classes), **html_options.except(:class) %>
<% end %>
